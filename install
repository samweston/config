#!/bin/bash

# Set up config files

# VIM
rm -f ~/.vimrc
ln -s `pwd`/vim/vimrc ~/.vimrc
# if OSX add .xvimrc for XCode.
if [[ `uname` == 'Darwin' ]]; then
    rm -f ~/.xvimrc
    ln -s `pwd`/vim/vimrc ~/.xvimrc
fi
if [ "`pwd`/vim/vim" != "`readlink ~/.vim`" ] || [ "$1" = "-f" ]; then
    rm -r ~/.vim
    ln -s `pwd`/vim/vim ~/.vim
fi

#rm -rf vim/bundle
mkdir -p vim/vim/bundle
pushd vim/vim/bundle/

# NERDTree
git -C nerdtree pull || git clone http://github.com/scrooloose/nerdtree.git
# vim-go
git -C vim-go pull || git clone http://github.com/fatih/vim-go.git
# rust.vim
git -C rust.vim pull || git clone --depth=1 https://github.com/rust-lang/rust.vim.git
# Powershell
git -C vim-ps1 pull || git clone https://github.com/PProvost/vim-ps1.git

popd

# BASH
rm -f ~/.bashrc
ln -s `pwd`/bashrc ~/.bashrc

# TMUX
rm -f ~/.tmux.conf
ln -s `pwd`/tmux.conf ~/.tmux.conf

# GIT
rm -f ~/.gitconfig
ln -s `pwd`/gitconfig ~/.gitconfig

# XRESOURCES
rm -f ~/.Xresources
ln -s `pwd`/Xresources ~/.Xresources
